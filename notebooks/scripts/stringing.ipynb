   "source": [
    "def get_comma_values(df_series):\n",
    "\n",
    "    ##  Function to get all values from a dataframe series comma separated as a string    ##\n",
    "\n",
    "    import re\n",
    "\n",
    "    return (re.sub('[^A-Za-z0-9]+', \"','\", str(df_series.unique()))[2:-2])"
   ]
